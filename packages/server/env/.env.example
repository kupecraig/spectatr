# Environment Configuration
# Copy this file to .env and update values as needed

# Node environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3001

# Database connection string (runtime — RLS enforced via spectatr_app role)
DATABASE_URL=postgresql://spectatr_app:spectatr_app@localhost:5432/spectatr

# Shadow database for prisma migrate dev — requires CREATEDB privilege (postgres superuser)
# Prisma creates and drops this automatically during migrations.
# See ARCHITECTURE.md: seeds and migrations use the postgres superuser and bypass RLS.
SHADOW_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/spectatr_shadow

# Redis connection (for BullMQ background jobs)
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS allowed origin (frontend URL)
FRONTEND_URL=http://localhost:5173

# Clerk Authentication
# Get these from https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
