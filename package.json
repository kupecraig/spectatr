{
  "name": "spectatr",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:ui": "npm --silent run dev --workspace=@spectatr/ui",
    "dev:server": "npm --silent run dev --workspace=@spectatr/server",
    "dev:shared": "npm --silent run dev --workspace=@spectatr/shared-types",
    "dev": "concurrently --names \"shared,server,ui\" --prefix-colors \"bgMagenta.bold,bgCyan.bold,bgGreen.bold\" --prefix \"[{name}]\" --kill-others-on-fail \"npm run dev:shared\" \"npm run dev:server\" \"npm run dev:ui\"",
    "build": "npm run build --workspace=@spectatr/shared-types && npm run build --workspace=@spectatr/ui && npm run build --workspace=@spectatr/server",
    "build:shared": "npm run build --workspace=@spectatr/shared-types",
    "build:ui": "npm run build --workspace=@spectatr/ui",
    "build:server": "npm run build --workspace=@spectatr/server",
    "lint": "npm run lint --workspaces",
    "preview": "npm run preview --workspace=@spectatr/ui",
    "seed:trc": "npm run seed:trc --workspace=@spectatr/server",
    "seed:super": "npm run seed:super --workspace=@spectatr/server",
    "seed:all": "npm run seed:all --workspace=@spectatr/server"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
